<body>
  <main>
    <table>
      <thead>
        <h3>User info</h3>
        <tr>
          <td><h4>name</h4></td>
          <td><%=@user.name %></td>
        </tr>
        <tr>
          <td><h4>introdcution</h4></td>
          <td><%=@user.introduction %></td>
        </tr>
      </thead>
      <tr>
        <td><%=link_to "edit", "" %></td>
      </tr>
    </table>

    <div class = "book_form">
      <h3>New book</h3>
      <%= form_with model: @book, local: true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%=f.text_area :body %>
      <%=f.submit 'Create Book' %>
      <% end %>
    </div>
  <h3>Books</h3>
  <table>
    <thead>
      <tr>
        <td></td>
        <td><h4>title</h4></td>
        <td><h4>Opinion</h4></td>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td></td>
        <td><%= link_to  book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</body>