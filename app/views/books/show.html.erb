<body>
  <main>
    <table>
      <thead>
        <h3>User info</h3>
        <tr>
          <td><h4>name</h4></td>
          <td><%=@user.name %></td>
        </tr>
        <tr>
          <td><h4>introdcution</h4></td>
          <td><%=@user.introduction %></td>
        </tr>
      </thead>
      <tr>
        <td><%=link_to "edit", "" %></td>
      </tr>
    </table>

    <div class = "book_form">
      <h3>New book</h3>
      <%= form_with model: @book, local: true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%=f.text_area :body %>
      <%=f.submit 'Create Book' %>
      <% end %>
    </div>
  <h3>Book detail</h3>
  <table>
    <tbody>
      <tr>
        <td></td>
        <td><%= @book_show.title %></td>
        <td><%= @book_show.body %></td>
      </tr>
    </tbody>
  </table>
</body>