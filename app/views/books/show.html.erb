<body>
  <div class ="container">
    <div class="row">
      <div class="col-md-3">
      <table class="table">
        <h3>User info</h3>
        <%= attachment_image_tag @user,:profile_image, :fill, 60 , 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <thead>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%=@user.name %></th>
          </tr>
          <tr>
            <th scope="col">introdcution</th>
            <th scope="col"><%=@user.introduction %></th>
          </tr>
        </thead>
        <tr scope="col">
          <% if current_user.id ==  @user.id %>
         <td><%= link_to "edit", edit_user_path(@user.id) %></td>
         <% else %>
         <td><%= link_to "edit", user_path(current_user) %></td>
         <% end %>
        </tr>
      </table>

      <div class = "book_form">
        <h3>New book</h3>
        <%= form_with model: @book, local: true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%=f.text_area :body %>
          <%=f.submit 'Create Book', class: "brn btn-success" %>
        <% end %>
      </div>
     </div>

    <div class="col-md-8">
    <table class="table">
    <h3>Book detail</h3>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @book_show.user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= @book_show.user.name %></td>
          <td><%= @book_show.title %></td>
          <td><%= @book_show.body %></td>
          
          <% if @book_show.favorite_by?(current_user) %>
          <td><%=link_to book_favorites_path(@book_show), method: :delete do  %>
          <i class="fas fa-heart"></br><%=@book_show.favorites.count %></td>
          <% end %>
          <% else %>
          <td><%=link_to book_favorites_path(@book_show), method: :post do  %>
          <i class="far fa-heart"></i></br><%=@book_show.favorites.count%></td>
          <% end %>
          <% end %>
          
          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn btn-success" %></td>
          <td><%= link_to "Delete",book_path(@book_show.id), method: :delete,
            data: {confirm: "Are you Sure?"}, class: "btn btn-danger"%></td>
          <% end %>
        </tr>
      </tbody>
     </table>
     <table class="table">
      <h4>Comment  <%= @book_show.book_comments.count %></h4>
      <tbody>
        <tr>
           <% @book_show.book_comments.each do |book_comment| %>
          <th> <%= attachment_image_tag book_comment.user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></br>
               <%= book_comment.user.name %></th>
          <td><%= book_comment.comment %></td>
          <td> <%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
          <% if book_comment.user === current_user %>
          <td><%=link_to "Delete", book_book_comment_path(book_comment.book, book_comment), method: :delete,
               class: "btn btn-danger"%></td>
          <% end %>
        </tr>
         <% end %>
      </tbody>
     </table>
      <div class="new-coment">
      <%= form_with(model:[@book_show, @book_comment], local: true) do |f| %>
      <div class= "form-group">
        <label for= "inputcomment"><h4>New comment</h4></label>
        <%= f.text_area :comment ,id:"inputcomment", class: "form-control" %>
      </div>
        <%= f.submit 'Create Comment', class: "btn btn-success" %>
       <% end %>
     </div>
  </div>

  </div>
  </div>
</body>